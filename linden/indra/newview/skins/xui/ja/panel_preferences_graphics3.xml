<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel label="グラフィック２" name="Display panel 2">
	<text type="string" length="1" name="Filtering:">
		フィルタリング：
	</text>
	<check_box
	     label="異方的フィルタリング（有効にすると速度が低下します）"
	     name="ani" left="160" />
	<spinner label="ガンマ：" name="gamma" label_width="148" width="208"/>
	<text type="string" length="1" name="(brightness, lower is brighter)" left="223">
		０＝デフォルト値（最も明るい）
	</text>
	<spinner label="夜の明るさ：" name="nighttime_brightness" label_width="148" width="208"/>
	<text type="string" length="1" name="(higher is brighter, 1.0 is default)" left="223">
		（高いほど明るい、1.0がデフォルト）
	</text>
	<text type="string" length="1" name="Enable VBO:">
		VBOを有効化：
	</text>
	<check_box label="OpenGL Vertex Buffer オブジェクトを有効化" name="vbo"
	     tool_tip="一部のOpenGLドライバは、これを有効化するとクラッシュすることがあります。" left="160"/>
	<text type="string" length="1" name="Graphics Card Memory:">
		グラフィックメモリ：
	</text>
	<radio_group name="video card memory radio" left="160">
		<radio_item type="string" length="1" name="radio" left="15">
			16MB
		</radio_item>
		<radio_item type="string" length="1" name="radio2" left="15">
			32MB
		</radio_item>
		<radio_item type="string" length="1" name="radio3" left="15">
			64MB
		</radio_item>
		<radio_item type="string" length="1" name="radio4" left="15">
			128MB
		</radio_item>
		<radio_item type="string" length="1" name="radio5" left="15">
			256MB
		</radio_item>
		<radio_item type="string" length="1" name="radio6" left="15">
			512MB
		</radio_item>
	</radio_group>
	<spinner label="霧／視界率：" name="fog" label_width="148" width="208"/>
	<spinner label="最大パーティクル数：" name="particles" label_width="148" width="208"/>
	<spinner label="服装合成限度：" name="comp limit"
	     tool_tip="服装の変更を過去何回まで表示するか" label_width="148" width="208"/>
	<text type="string" length="1" name="(lower is faster)" left="223" >
		（低いほど速い）
	</text>
	<spinner label="デバッグ用標識線の幅：" name="debug beacon line width" label_width="148" width="208"/>
	<check_box
	     label="次回起動時にグラフィック・ハードウェアを自動検出"
	     name="probe_hardware_checkbox" left="160"
	     tool_tip="Second Lifeは、あなたのハードウェアに基づき、いくつかのグラフィック設定を自動的に構成します。新しいハードウェアをインストールした場合は、Second Lifeに再度検知させるようにしてください。" />
</panel>
