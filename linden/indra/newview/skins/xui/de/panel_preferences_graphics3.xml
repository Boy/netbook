<?xml version="1.0" encoding="utf-8" standalone="yes" ?>
<panel label="Erw. Grafikdetails" name="Display panel 2">
	<text type="string" length="1" name="Filtering:">
		Filtern:
	</text>
	<check_box label="Anisotropische Filterung (langsamer, wenn aktiviert)" name="ani" />
	<spinner label="Gamma:" name="gamma" />
	<text type="string" length="1" name="(brightness, lower is brighter)">
		(Helligkeit, niedriger ist heller, 0=Standard)
	</text>
	<spinner label="Helligkeit bei Nacht:" name="nighttime_brightness" />
	<text type="string" length="1" name="(higher is brighter, 1.0 is default)">
		(höher ist heller, 1.0 = Standard)
	</text>
	<text type="string" length="1" name="Enable VBO:">
		VBO aktivieren:
	</text>
	<check_box label="OpenGL Vertex-Buffer-Objekte aktivieren" name="vbo"
	     tool_tip="Bei einigen OpenGL-Treibern kann diese Option zum Absturz führen." />
	<text type="string" length="1" name="Graphics Card Memory:">
		Grafikkartenspeicher:
	</text>
	<radio_group name="video card memory radio">
		<radio_item type="string" length="1" name="radio">
			16 MB
		</radio_item>
		<radio_item type="string" length="1" name="radio2">
			32 MB
		</radio_item>
		<radio_item type="string" length="1" name="radio3">
			64 MB
		</radio_item>
		<radio_item type="string" length="1" name="radio4">
			128 MB
		</radio_item>
		<radio_item type="string" length="1" name="radio5">
			256 MB
		</radio_item>
		<radio_item type="string" length="1" name="radio6">
			512 MB
		</radio_item>
	</radio_group>
	<spinner label="Nebeldistanzverhältnis:" name="fog" />
	<spinner label="Max. Partikelzahl:" name="particles" />
	<spinner label="Outfit-Grenzwert:" name="comp limit"
	     tool_tip="Anzahl der kürzlich geänderten Outfits für Anzeige" />
	<text type="string" length="1" name="(lower is faster)">
		(niedriger ist schneller)
	</text>
	<spinner label="Beacon-Breite:" name="debug beacon line width" />
	<check_box label="Grafikhardware beim nächsten Start automatisch erkennen"
	     name="probe_hardware_checkbox"
	     tool_tip="Second Life konfiguriert einige Grafikeinstellungen automatisch auf Basis Ihrer Hardware.  Wenn Sie neue Hardware installieren, sollten Sie diese von Second Life neu erkennen lassen." />
</panel>
